---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'MKrew - System Prognozowania Zapotrzebowania na Krew',
	description = 'Zaawansowany system prognozowania zapotrzebowania na krew w Regionalnych Centrach Krwiodawstwa i Krwiolecznictwa w Polsce z wykorzystaniem uczenia maszynowego.'
} = Astro.props;
---

<!doctype html>
<html lang="pl" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content="krew, prognozowanie, RCKiK, uczenie maszynowe, ARIMA, Prophet, krwiodawstwo" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<title>{title}</title>
	</head>
	<body class="antialiased bg-background text-foreground transition-colors font-sans">
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
	}

	* {
		box-sizing: border-box;
	}
</style>
