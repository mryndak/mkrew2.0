---
import Layout from '../layouts/Layout.astro';

const bloodTypes = ['A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-'];
const rckikCount = 21;

const features = [
	{
		icon: '🏥',
		title: '21 Centrów RCKiK',
		description: 'Monitorowanie wszystkich Regionalnych Centrów Krwiodawstwa i Krwiolecznictwa w Polsce'
	},
	{
		icon: '🩸',
		title: '8 Grup Krwi',
		description: 'Śledzenie zapotrzebowania na wszystkie grupy krwi: A+, A-, B+, B-, AB+, AB-, O+, O-'
	},
	{
		icon: '📊',
		title: 'Dane Historyczne',
		description: 'Automatyczne zbieranie i przechowywanie stanów magazynowych 3 razy dziennie'
	},
	{
		icon: '🚀',
		title: 'API REST',
		description: 'Nowoczesne API z JWT authentication i Spring Security'
	}
];

---

<Layout>
	<div class="min-h-screen bg-background">
		<!-- Navigation -->
		<nav class="bg-card shadow-sm border-b border-border">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
				<div class="flex justify-between items-center">
					<div class="flex items-center space-x-3">
						<div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
							<span class="text-primary-foreground text-2xl">🩸</span>
						</div>
						<div>
							<h1 class="text-2xl font-bold text-foreground">mKrew 2.0</h1>
							<p class="text-xs text-muted-foreground">System monitorowania i prognozowania zapotrzebowania na krew w RCKiK</p>
						</div>
					</div>
					<div class="flex items-center space-x-4">
						<a href="#features" class="text-muted-foreground hover:text-foreground transition">
							Funkcje
						</a>
						<a href="/api/auth/login" class="text-muted-foreground hover:text-foreground transition">
							Logowanie
						</a>
						<a href="/api/auth/register" class="bg-primary text-primary-foreground px-6 py-2 rounded-lg hover:opacity-90 transition">
							Rejestracja
						</a>
					</div>
				</div>
			</div>
		</nav>

		<!-- Hero Section -->
		<section class="bg-background py-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<h1 class="text-5xl md:text-6xl font-extrabold text-foreground mb-6">
						Prognozowanie zapotrzebowania<br />
						<span class="bg-gradient-to-r from-primary to-destructive bg-clip-text text-transparent">
							na krew w Polsce
						</span>
					</h1>
					<p class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto">
						Zaawansowany system wykorzystujący uczenie maszynowe do przewidywania niedoborów krwi
						w Regionalnych Centrach Krwiodawstwa i Krwiolecznictwa
					</p>

					<!-- Stats -->
					<div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto mb-12">
						<div class="bg-card rounded-xl p-6 shadow-sm border border-border">
							<div class="text-4xl font-bold text-primary">{rckikCount}</div>
							<div class="text-sm text-muted-foreground mt-1">Centra RCKiK</div>
						</div>
						<div class="bg-card rounded-xl p-6 shadow-sm border border-border">
							<div class="text-4xl font-bold text-primary">{bloodTypes.length}</div>
							<div class="text-sm text-muted-foreground mt-1">Grupy krwi</div>
						</div>
						<div class="bg-card rounded-xl p-6 shadow-sm border border-border">
							<div class="text-4xl font-bold text-primary">4</div>
							<div class="text-sm text-muted-foreground mt-1">Modele ML</div>
						</div>
						<div class="bg-card rounded-xl p-6 shadow-sm border border-border">
							<div class="text-4xl font-bold text-primary">3x</div>
							<div class="text-sm text-muted-foreground mt-1">Dziennie</div>
						</div>
					</div>

					<div class="flex justify-center space-x-4">
						<a href="/dashboard" class="bg-primary text-primary-foreground px-8 py-3 rounded-lg font-semibold hover:opacity-90 transition shadow-lg hover:shadow-xl">
							Przejdź do Dashboard
						</a>
						<a href="https://github.com/mkrew2/mkrew2" class="bg-card text-foreground px-8 py-3 rounded-lg font-semibold hover:bg-accent transition border border-border">
							Zobacz na GitHub
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Blood Types Section -->
		<section class="py-12 bg-muted">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h3 class="text-center text-lg font-semibold text-foreground mb-6">
					Monitorowane grupy krwi
				</h3>
				<div class="flex flex-wrap justify-center gap-3">
					{bloodTypes.map(type => (
						<div class="bg-card border-2 border-primary/30 rounded-lg px-6 py-3">
							<span class="text-primary font-bold text-lg">{type}</span>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section id="features" class="py-20 bg-background">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-4xl font-bold text-foreground mb-4">
						Kluczowe funkcjonalności
					</h2>
					<p class="text-lg text-muted-foreground max-w-2xl mx-auto">
						Kompleksowe rozwiązanie dla przewidywania i zarządzania zapotrzebowaniem na krew
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
					{features.map(feature => (
						<div class="bg-card rounded-xl p-8 shadow-sm border border-border hover:shadow-md hover:border-primary/50 transition">
							<div class="text-5xl mb-4">{feature.icon}</div>
							<h3 class="text-xl font-bold text-foreground mb-2">{feature.title}</h3>
							<p class="text-muted-foreground">{feature.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="bg-card border-t border-border py-12">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-lg font-bold mb-4 text-foreground">MKrew 2.0</h3>
						<p class="text-muted-foreground text-sm">
							System prognozowania zapotrzebowania na krew w Regionalnych Centrach
							Krwiodawstwa i Krwiolecznictwa w Polsce
						</p>
					</div>
					<div>
						<h3 class="text-lg font-bold mb-4 text-foreground">Projekt</h3>
						<ul class="space-y-2 text-sm text-muted-foreground">
							<li>Course: 10xdevs 2.0</li>
							<li>Backend: Spring Boot + Java 21</li>
							<li>ML Service: Python + TensorFlow</li>
							<li>Frontend: Astro + React</li>
						</ul>
					</div>
					<div>
						<h3 class="text-lg font-bold mb-4 text-foreground">Linki</h3>
						<ul class="space-y-2 text-sm">
							<li><a href="/dashboard" class="text-muted-foreground hover:text-primary transition">Dashboard</a></li>
							<li><a href="/api/docs" class="text-muted-foreground hover:text-primary transition">API Docs</a></li>
							<li><a href="https://github.com/mkrew2/mkrew2" class="text-muted-foreground hover:text-primary transition">GitHub</a></li>
						</ul>
					</div>
				</div>
				<div class="border-t border-border mt-8 pt-8 text-center text-sm text-muted-foreground">
					<p>&copy; 2025 MKrew 2.0. Projekt edukacyjny 10xdevs.</p>
				</div>
			</div>
		</footer>
	</div>
</Layout>

<style>
	/* Custom animations */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	section {
		animation: fadeIn 0.6s ease-out;
	}
</style>
